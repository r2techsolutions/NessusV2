<AnchorPane id="AnchorPane" prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
    <children>
        <GridPane alignment="CENTER" hgap="10" layoutX="205.0" layoutY="160.0" styleClass="root" vgap="10">
            <padding><Insets bottom="10" left="25" right="25" top="25" /></padding>
           <children>              
               <Text id="welcome-text" text="Welcome Nessus" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />
   
               <Label alignment="bottom_right" text="User Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
   
               <TextField fx:id="userNameField" text="Ron" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   
               <Label alignment="bottom_right" text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
   
               <PasswordField fx:id="passwordField" text="12345" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
                  <children>
                          <Button fx:id="signIn" onAction="#signInAction" text="Sign In" />
                          <Button onAction="#exitAction" text="Cancel" />
                  </children>
               </HBox>
   
               <Text fx:id="actiontarget" GridPane.columnIndex="1" GridPane.rowIndex="6" />
           </children>           
           <stylesheets>
                <URL value="@/css/login.css" />
            </stylesheets>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>

        </GridPane>
      <ImageView fitHeight="122.0" fitWidth="55.0" layoutX="73.0" layoutY="44.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/CleanLogo-07-16.jpg" />
         </image>
      </ImageView>
    </children>
    

</AnchorPane>
